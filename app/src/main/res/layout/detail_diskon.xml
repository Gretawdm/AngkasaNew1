<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bgactivity"
    tools:context=".Diskon.DetailDiskon"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:drawableStart="@drawable/baseline_keyboard_backspace_24"
            android:id="@+id/header"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_black"
            android:gravity="center"
            android:text="Detail Promo"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/linear">

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="380dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp"
            app:cardBackgroundColor="@color/abuabu"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp">

                    <LinearLayout
                        android:paddingTop="10dp"
                        android:id="@+id/linear_deskripsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:paddingTop="15dp"
                            android:layout_below="@+id/linear"
                            android:id="@+id/text1"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Judul Promo"
                            android:paddingStart="20dp"
                            android:fontFamily="@font/poppins_black"
                            android:textSize="14sp"/>
                        <TextView
                            android:id="@+id/txt_judul_promo"
                            android:layout_below="@+id/text1"
                            android:layout_width="310dp"
                            android:layout_marginStart="20dp"
                            android:layout_height="50dp"
                            android:paddingTop="12dp"
                            android:textColor="#808080"
                            android:paddingBottom="10dp"
                            android:paddingLeft="15dp"
                            android:background="@drawable/backgroundtext"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="15sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/id_promo"/>

                <TextView
                    android:paddingTop="15dp"
                    android:id="@+id/text2"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Promo"
                    android:paddingStart="20dp"
                    android:fontFamily="@font/poppins_black"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/txt_nama_promo"
                    android:layout_width="310dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/abumuda"
                    android:paddingLeft="15dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="15sp"
                    android:background="@drawable/backgroundtext"/>

                <TextView
                    android:paddingTop="15dp"
                    android:id="@+id/text3"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga Promo"
                    android:paddingStart="20dp"
                    android:fontFamily="@font/poppins_black"
                    android:textSize="14sp"/>
                <EditText
                    android:id="@+id/txt_harga"
                    android:layout_width="310dp"
                    android:layout_height="50dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="15sp"
                    android:background="@drawable/backgroundtext"/>

            </LinearLayout>

                

                   
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/btn_batal"
                android:layout_marginTop="30dp"
                android:layout_marginStart="50dp"
                android:layout_width="140dp"
                android:backgroundTint="@color/merah"
                android:drawableEnd="@drawable/baseline_cancel_24"
                android:text="Batal"
                android:fontFamily="@font/poppins_black"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/btn_send"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:drawableEnd="@drawable/baseline_check_circle_24"
                android:text="Send"
                android:fontFamily="@font/poppins_black"
                android:textSize="15sp"
                android:backgroundTint="@color/hijau"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"/>

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>