<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bfgactivitynew"
    tools:context=".Pesanan.DetailPesanananPromo">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/header"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_black"
            android:gravity="center"
            android:text="Detail Pemesanan Promo"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/linear">

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="600dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/abuabu"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="50dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:paddingTop="10dp"
                        android:id="@+id/linear_deskripsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:paddingTop="15dp"
                            android:layout_below="@+id/linear"
                            android:id="@+id/text1"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Judul Promo"
                            android:paddingStart="20dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_black"
                            android:textSize="14sp"/>
                        <TextView
                            android:id="@+id/txt_judulpromo"
                            android:layout_below="@+id/text1"
                            android:layout_width="310dp"
                            android:layout_marginStart="20dp"
                            android:layout_height="40dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/abumuda"
                            android:paddingLeft="15dp"
                            android:textSize="12sp"
                            android:background="@drawable/backgroundtext"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingRight="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/id_pemesanan"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:paddingTop="15dp"
                            android:id="@+id/text2"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Promo"
                            android:paddingStart="20dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_black"
                            android:textSize="14sp"/>
                        <TextView
                            android:id="@+id/txt_namapromo"
                            android:layout_below="@+id/text1"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:textSize="12sp"
                            android:paddingLeft="15dp"
                            android:textColor="@color/abumuda"
                            android:layout_width="310dp"
                            android:layout_marginStart="20dp"
                            android:layout_height="40dp"
                            android:background="@drawable/backgroundtext"
                            android:fontFamily="@font/poppins_medium" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:paddingTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nama Customer"
                            android:paddingStart="20dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_black"/>

                        <TextView
                            android:paddingRight="5dp"
                            android:id="@+id/txt_namacust"
                            android:layout_width="310dp"
                            android:layout_marginStart="20dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:textSize="12sp"
                            android:paddingLeft="15dp"
                            android:textColor="@color/abumuda"
                            android:layout_height="40dp"
                            android:background="@drawable/backgroundtext"
                            android:fontFamily="@font/poppins_medium"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:paddingTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No Hp"
                            android:paddingStart="20dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_black"/>

                        <TextView
                            android:paddingRight="5dp"
                            android:id="@+id/txt_no_hppromo"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:paddingLeft="15dp"
                            android:textSize="12sp"
                            android:textColor="@color/abumuda"
                            android:layout_width="310dp"
                            android:layout_marginStart="20dp"
                            android:layout_height="40dp"
                            android:background="@drawable/backgroundtext"
                            android:fontFamily="@font/poppins_medium" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:paddingTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Alamat Acara"
                            android:paddingStart="20dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_black"/>

                        <TextView
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:paddingLeft="15dp"
                            android:textColor="@color/abumuda"
                            android:paddingRight="5dp"
                            android:textSize="12sp"
                            android:id="@+id/txt_alamatpromo"
                            android:layout_width="310dp"
                            android:layout_marginStart="20dp"
                            android:layout_height="40dp"
                            android:background="@drawable/backgroundtext"
                            android:fontFamily="@font/poppins_medium" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:paddingTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Harga"
                            android:paddingStart="20dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_black"/>

                        <TextView
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:paddingLeft="15dp"
                            android:textColor="@color/abumuda"
                            android:textSize="12sp"
                            android:paddingRight="5dp"
                            android:id="@+id/txt_hargapromo"
                            android:layout_width="310dp"
                            android:layout_marginStart="20dp"
                            android:layout_height="40dp"
                            android:background="@drawable/backgroundtext"
                            android:fontFamily="@font/poppins_medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Apakah Pesanan Ini Telah Selesai?"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:paddingTop="20dp"
                            android:fontFamily="@font/poppins_black"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <Button
                            android:id="@+id/btn_batal"

                            android:layout_marginStart="20dp"
                            android:layout_width="140dp"
                            android:backgroundTint="@color/merah"
                            android:drawableEnd="@drawable/baseline_cancel_24"
                            android:text="Batal"
                            android:fontFamily="@font/poppins_black"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_height="50dp" />

                        <Button
                            android:id="@+id/btn_selesai"
                            android:layout_width="140dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="30dp"
                            android:drawableEnd="@drawable/baseline_check_circle_24"
                            android:text="Selesai"
                            android:fontFamily="@font/poppins_black"
                            android:textSize="15sp"
                            android:backgroundTint="@color/hijau"
                            android:textColor="@color/white" />

                    </LinearLayout>


                </LinearLayout>


            </ScrollView>

        </androidx.cardview.widget.CardView>






    </LinearLayout>



</RelativeLayout>