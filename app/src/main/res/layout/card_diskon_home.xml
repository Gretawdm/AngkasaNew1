<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="140dp"
    android:id="@+id/cardDiskon"
    app:cardCornerRadius="10dp"
    android:layout_marginStart="20dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="10dp"
    app:cardElevation="4dp"
    android:layout_marginTop="20dp"
    android:layout_width="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/gambar_diskon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/baseline_discount_25" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Januari"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_black"
            android:textSize="18sp"
            android:id="@+id/txt_nama_bulan_home"
            android:layout_below="@+id/gambar_diskon"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_nama_bulan_home"
            android:id="@+id/txt_judulpromo"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-5dp"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:text="Promo Kemerdekaan dan tahun baru"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>