<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="100dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/cardViewProposal"
    app:cardElevation="4dp"
    android:backgroundTint="@color/white"
    android:layout_marginTop="12dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/gambar_produk"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/baseline_photo_camera_front_24" />

        <TextView
            android:id="@+id/txt_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="100dp"
            android:fontFamily="@font/poppins_black"
            android:text="Nama Produk"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_tanggal_pemesanan"
            android:layout_width="wrap_content"
            android:layout_below="@+id/txt_product"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_medium"
            android:text="28/10/2023"
            android:textColor="@color/black"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="270dp"
            android:fontFamily="@font/poppins_medium"
            android:text="belum selesai"
            android:textColor="#FF3E3E"
            android:textSize="11sp"
            android:textStyle="bold"/>

    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>