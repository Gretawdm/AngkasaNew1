<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgactivity"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:drawableStart="@drawable/baseline_keyboard_backspace_24"
            android:id="@+id/header"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_black"
            android:gravity="center"
            android:text="Detail Pemesanan Luar Jember"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/linear">

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="380dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp"
            app:cardBackgroundColor="@color/abuabu"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:paddingTop="10dp"
                        android:id="@+id/linear_deskripsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:paddingTop="15dp"
                            android:layout_below="@+id/linear"
                            android:id="@+id/text1"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Customer"
                            android:paddingStart="20dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="14sp"/>
                        <TextView
                            android:layout_below="@+id/text1"
                            android:layout_width="310dp"
                            android:layout_marginStart="20dp"
                            android:layout_height="40dp"
                            android:text="Nama Customer"
                            android:paddingStart="18dp"
                            android:background="@drawable/backgroundtext"
                            android:gravity=""
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:paddingTop="15dp"
                            android:id="@+id/text2"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No HP"
                            android:paddingStart="20dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="14sp"/>
                        <TextView
                            android:layout_below="@+id/text1"
                            android:layout_width="310dp"
                            android:layout_marginStart="20dp"
                            android:layout_height="40dp"
                            android:text="No HP"
                            android:paddingStart="18dp"
                            android:background="@drawable/backgroundtext"
                            android:gravity=""
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:paddingTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Acara"
                            android:paddingStart="20dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_medium"/>

                        <TextView
                            android:layout_width="310dp"
                            android:layout_marginStart="20dp"
                            android:layout_height="40dp"
                            android:text="Tanggal Acara"
                            android:paddingStart="18dp"
                            android:background="@drawable/backgroundtext"
                            android:gravity=""
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:paddingTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Alamat Acara"
                            android:paddingStart="20dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_medium"/>

                        <TextView
                            android:layout_width="310dp"
                            android:layout_marginStart="20dp"
                            android:layout_height="40dp"
                            android:text="Alamat Acara"
                            android:paddingStart="18dp"
                            android:background="@drawable/backgroundtext"
                            android:gravity=""
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="12sp"/>

                    </LinearLayout>





                </LinearLayout>
            </ScrollView>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/btn_batal"
                android:layout_marginTop="30dp"
                android:layout_marginStart="50dp"
                android:layout_width="140dp"
                android:backgroundTint="@color/merah"
                android:drawableEnd="@drawable/baseline_cancel_24"
                android:text="Batal"
                android:fontFamily="@font/poppins_black"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/btn_selesai"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:drawableEnd="@drawable/baseline_check_circle_24"
                android:text="Selesai"
                android:fontFamily="@font/poppins_black"
                android:textSize="15sp"
                android:backgroundTint="@color/hijau"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"/>

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>